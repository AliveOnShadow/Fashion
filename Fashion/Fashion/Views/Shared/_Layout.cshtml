<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-2.0.0.min.js"></script>
    <style>
        html {
            height: 100%;
        }

        body {
            height: 100%;
            padding: 0px;
            margin: 0px;
        }
        /*导航栏*/
        .nav {
            height: 10%;
            width: 70%;
            /*position: fixed;
            top: 9%;
            left: 9%;*/
            
            margin-top:4%;
            margin-left:9%;
            z-index: 2;
            
        }
        /*导航栏里的链接*/
        .nav-tag {
            
            font-family: Arial;
            width: 100px;
            font-size: 25px;
            margin-right: 20px;
            margin-top: 20px;
            float: left;
        }
        a.nav-tag-a:link {
            text-decoration:none;
        }
        a.nav-tag-a:hover {
            background-color:#5cbbd3;
        }
        a.nav-tag-a:visited {
            color: #a2b6b0;
        }
        .bb {
            border: 1px solid green;
        }
        /*右边的棒棒*/
        .theRightBar {
            width: 7px;
            height: 100%;
            background-color: #8cc152;
            position: fixed;
            top: 0px;
            right: 0px;
        }
        .theRightHiddenPage {
            height: 2000px;
            width: 10px;
            position: fixed;
            right: 0px;
            top: 0px;
            display: none;
            border-left: 2px solid blue;
            background-color: aliceblue;
        }
        .theRightHiddenPage-tag {
            width: 80px;
            height: 25px;
            font-size: 18px;
            font-weight: 100;
            
            margin-left: 25px;
        }

        .theContainer {
            width: 78%;
            margin-top: 8px;   
            left: 14%;
            position: relative;
            z-index:-1;
            
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {

            $("#iconOut").click(function () {

                $("#theContainer").animate({ left: "0px" }, "slow");

                $("#theRightHiddenPage").css("display", "block");
                $("#theRightHiddenPage").animate({ width: "250px" }, "slow");

                $("#iconOut").css("display", "none");
                $("#theRightBar").css("display", "none");
            });

            $("#iconIn").click(function () {
                //$("#TheContent").animate({ right: "100px" }, "slow");
                $("#theContainer").css("left", "14%");
                $("#theRightHiddenPage").animate({ width: "10px" }, "slow");
                $("#theRightHiddenPage").css("display", "none");
                $("#iconOut").css("display", "");
                $("#theRightBar").css("display", "");
            });
        });
    </script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    
      
        <div class="nav " id="nav" >
            <div style="font-family:MingLiU; font-size:33px;font-weight:bold; width:140px;margin-left:80px;margin-top:10px;float:left;margin-right:80px;">
                时尚达人
            </div>
            <div id="tag1" style="width: 55px;" class="nav-tag">
                <a href="~/Topic/Home" class="nav-tag-a">
                    首页
                </a>
            </div>
            <div id="tag2" style="width: 55px;" class="nav-tag">
                <a href="~/Test/jiepai" class="nav-tag-a">
                    街拍
                </a>

            </div>
            <div id="tag3" style="width:80px;" class="nav-tag">
                <a href="~/Test/gerenxiu" class="nav-tag-a">个人秀</a>

            </div>
            <div id="tag4" class="nav-tag bb">
                <a href="~/Test/chaoliuzixun" class="nav-tag-a">
                    潮流资讯
                </a>

            </div>
            <div id="search" class="nav-tag bb" style="width:200px;">
                <input  type="text" style="height:30px;border-radius:10px;"  placeholder="Search"/>
            </div>
        </div>
    
    <div style="width:100%;height:2px;margin-top:10px;">
        <hr style="border:none;border-top:1px solid #c4bfbf;" />
    </div>
    <div class="theRightBar " id="TheRightBar">
    </div>
    <div id="iconOut"  style="position:fixed;right:0px;top:0px;">
        <img src="~/Images/Layout-iconOut.png" />
    </div>
    <div id="theRightHiddenPage" style="z-index:1;" class="theRightHiddenPage">
        <div style="float:right;" id="iconIn">
            <img src="~/Images/Layout-iconIn.png" />
        </div>
        <div style="height:30px;width:60%;font-family:AngsanaUPC;font-weight:bold;font-size:25px;margin-top:25px;margin-left:20px;text-shadow:2px 4px 4px #5cbbd3;">
            时尚达人
        </div>
        
       
        <div id="tag1" style="" class="theRightHiddenPage-tag">
            <a href="~/Topic/Home">
                首页
            </a>
        </div>
        <div id="tag2" style="width: 55px;" class="theRightHiddenPage-tag">
            <a href="~/Test/jiepai">
                街拍
            </a>

        </div>
        <div id="tag3" style="width:80px;" class="theRightHiddenPage-tag">
            <a href="~/Test/gerenxiu">个人秀</a>

        </div>
        <div id="tag4" class="theRightHiddenPage-tag">
            <a href="~/Test/chaoliuzixun">
                潮流资讯
            </a>

        </div>
      


    </div>
   
    
    <div id="theContainer" class="theContainer">
        @RenderBody()
    </div>
    


        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
</body>
</html>
