<script type="text/javascript">
    function answer(x){                        //切换问题模块
        var y = document.getElementById(x).value;
        if (y == "发型") {
            document.getElementById("hair").style.display = "block";
            document.getElementById("collocation").style.display = "none";
            document.getElementById("Answer").style.display = "none";
            document.getElementById("popular").style.display = "none";

        }
        
        else if (y == "流行") {
            document.getElementById("hair").style.display = "none";
            document.getElementById("collocation").style.display = "none";
            document.getElementById("Answer").style.display = "none";
            document.getElementById("popular").style.display = "block";
            
        }
        else if (y == "搭配") {
            document.getElementById("hair").style.display = "none";
            document.getElementById("collocation").style.display = "block";
            document.getElementById("Answer").style.display = "none";
            document.getElementById("popular").style.display = "none";

        }
        else {
            document.getElementById("hair").style.display = "none";
            document.getElementById("collocation").style.display = "none";
            document.getElementById("Answer").style.display = "block";
            document.getElementById("popular").style.display = "none";

        }            
    }

    </script>
<script type="text/javascript">                        //图片上传功能
    function CheckImg(fileUpload) {
        var imags = document.getElementsByTagName("img");
        for (i = 0; i < imags.length; i++) {
            if (imags[i].name == 'imagePhoto') {
                imags[i].src = fileUpload.value;
            }
        }
    }

</script>

